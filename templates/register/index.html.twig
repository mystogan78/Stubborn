{% extends 'base.html.twig' %}
{% block title %}{{ 'auth.sign_up'|trans }}{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  {# réutilise le même CSS que pour le login #}
  <link rel="stylesheet" href="{{ asset('styles/auth.css') }}">
{% endblock %}

{% block body %}
<div class="auth-page">
  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-12 col-md-7 col-lg-6">
        <div class="card auth-card shadow-sm">
          <div class="card-body p-4">

            <h1 class="h4 auth-title text-center mb-4">{{ 'auth.sign_up'|trans }}</h1>

            {{ form_start(registrationForm, {
              attr: { class: 'd-grid gap-3' },
              translation_domain: 'messages'
            }) }}

              {{ form_errors(registrationForm) }}

              <div class="row g-3">
                <div class="col-md-6">
                  {{ form_row(registrationForm.name, {
                    label: 'user.name'|trans
                  }) }}
                </div>
                <div class="col-md-6">
                  {{ form_row(registrationForm.firstname, {
                    label: 'user.firstname'|trans
                  }) }}
                </div>
              </div>

              {{ form_row(registrationForm.email, {
                label: 'auth.email'|trans
              }) }}

              {{ form_row(registrationForm.plainPassword.first, {
                label: 'auth.password'|trans
              }) }}
              {{ form_row(registrationForm.plainPassword.second, {
                label: 'auth.password_confirm'|trans
              }) }}

              <button type="submit" class="btn btn-primary w-100 auth-submit">
                {{ 'auth.create_account'|trans }}
              </button>

              <p class="text-center m-0 mt-2">
                {{ 'auth.have_account'|trans }}
                <a href="{{ path('app_login') }}">{{ 'auth.log_in'|trans }}</a>
              </p>

            {{ form_end(registrationForm) }}

          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
