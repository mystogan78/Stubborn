{# templates/products/show.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}{{ product.name }} — Boutique{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="{{ asset('styles/show.css') }}">
{% endblock %}

{% block body %}
  <div class="container py-4">
    <div class="row g-4 align-items-start product">
      <div class="col-12 col-md-5">
        <div class="ratio ratio-1x1 product__image-wrapper">
          {% set imageSrc = product.imageUrl
            ? asset('images/products/' ~ product.imageUrl)
            : asset('images/placeholder.png') %}
          <img
            src="{{ imageSrc }}"
            class="img-fluid rounded product__image"
            alt="{{ product.name }}"
            loading="lazy"
          >
        </div>
      </div>

      <section class="col-12 col-md-7">
        <h1 class="h3 mb-3">{{ product.name }}</h1>

        <p class="h5 fw-bold text-primary mb-3 price">
          {{ product.priceEuro|number_format(2, ',', ' ') }} €
        </p>

        {% if product.description %}
          <p class="text-body-secondary">{{ product.description }}</p>
        {% endif %}

        <form action="{{ path('app_panier_add', { id: product.id }) }}" method="post" class="mt-3">
          <input type="hidden" name="_token" value="{{ csrf_token('add_to_cart' ~ product.id) }}">

          {# Sélecteur de taille #}
          {% if product.stockBySize is defined and product.stockBySize %}
            <div class="mb-3">
              <label for="size" class="form-label">{{ 'product.size'|trans }}</label>
              <select name="size" id="size" required class="form-select">
                {% for size, stock in product.stockBySize %}
                  <option value="{{ size }}" {{ stock <= 0 ? 'disabled' : '' }}>
                    {{ size }} {{ stock <= 0 ? ('product.out_of_stock'|trans) : '' }}
                  </option>
                {% endfor %}
              </select>
            </div>
          {% endif %}

          <div class="mb-3">
            <label for="qty" class="form-label">{{ 'product.qty'|trans }}</label>
            <input id="qty" type="number" name="qty" value="1" min="1" step="1" class="form-control w-auto">
          </div>

          <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">
              {{ 'product.add_to_cart'|trans }}
            </button>
            <a href="{{ path('app_products') }}" class="btn btn-link">← {{ 'products.back'|trans }}</a>
          </div>
        </form>
      </section>
    </div>
  </div>
{% endblock %}


