<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>{% block title %}Welcome!{% endblock %}</title>

  {# Bootstrap 5 CSS #}
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
    crossorigin="anonymous"
  >

  {# CSS global #}
  <link rel="stylesheet" href="{{ asset('styles/app.css') }}">

  {# Script Stripe.js : ⚠️ obligatoire avant toute utilisation de Stripe #}
  <script src="https://js.stripe.com/v3/" data-turbo-track="reload"></script>

  {# Hooks optionnels #}
  {% block stylesheets %}{% endblock %}
  {% block extra_styles %}{% endblock %}

  {% block javascripts %}
    {% block importmap %}{{ importmap('app') }}{% endblock %}
  {% endblock %}
</head>

  <body>

    {# Panier: on calcule une seule fois #}
    {% set cart = app.session.get('cart', {}) %}
    {% set cartCount = cart|reduce((s, q) => s + q, 0) %}

    <nav class="navbar navbar-expand-lg bg-body-tertiary mb-3">
      <div class="container">
        <a class="navbar-brand d-flex align-items-center" href="{{ path('app_root') }}">
      <img src="{{ asset('images/logo.png') }}" alt="Stubborn" height="40" class="me-2">
      <span class="fw-bold">STUBBORN</span>
    </a>

        <button class="navbar-toggler" type="button"
                data-bs-toggle="collapse" data-bs-target="#mainNav"
                aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div id="mainNav" class="collapse navbar-collapse">
          {# À gauche #}
          <ul class="navbar-nav me-auto">
            <li class="nav-item">
              <a class="nav-link" href="{{ path('app_products') }}">{{ 'products.title'|trans }}</a>
            </li>
          </ul>

          {# À droite #}
          <ul class="navbar-nav ms-auto align-items-lg-center gap-2">
            {% if app.user %}
              <li class="nav-item">
                <span class="nav-link disabled">{{ app.user.userIdentifier }}</span>
              </li>
              
              <li class="nav-item">
             <a class="nav-link" href="{{ path('app_orders') }}">{{ 'orders.title'|trans }}</a>
              </li>

              <li class="nav-item">
                <a class="nav-link" href="{{ path('app_logout') }}">{{ 'auth.log_out'|trans }}</a>
              </li>
            
            {% else %}
              <li class="nav-item">
                <a class="nav-link" href="{{ path('app_login') }}">{{ 'auth.log_in'|trans }}</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="{{ path('app_register') }}">{{ 'auth.sign_up'|trans }}</a>
              </li>
            {% endif %}

            <li class="nav-item">
              <a href="{{ path('app_panier_show') }}" class="btn btn-outline-primary position-relative">
                {{ 'cart.title'|trans }}
                {% if cartCount > 0 %}
                  <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                    {{ cartCount }}
                  </span>
                {% endif %}
              </a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <main>
      {% block body %}{% endblock %}
    </main>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
